@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <h3>Order your favourite food seamlessly!!!</h3>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Resouces/image1.jpg" alt="Christmas Offer">
        </div>

        <div class="item">
            <img src="~/Resouces/image2.jpg" alt="Great Food">
        </div>

        <div class="item">
            <img src="~/Resouces/image4.jpg" alt="Wow!!! Sea Food">
        </div>

        <div class="item">
            <img src="~/Resouces/image5.jpg" alt="Delightful Desert">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Smart Reservation</h2>
        <p>
            Our system automatically knows what you want and when you want it
            <img src="~/Resouces/reservation.png"/> <!--can make a link to it-->
        </p>
        <p><a class="btn btn-default" href="https://www.google.com">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Hygenic food</h2>
        <p>
            We offer very hygenic food.
            <img src="~/Resouces/food.png" /> <!--can make a link to it-->
        </p>
        <p><a class="btn btn-default" href="https://www.google.com">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Secure payment</h2>
        <p>
            We have very high standard security for payment.
            <img src="~/Resouces/secure_payment.png" /> <!--can make a link to it-->
        </p>
        <p><a class="btn btn-default" href="https://www.google.com">Learn more &raquo;</a></p>
    </div>
</div>