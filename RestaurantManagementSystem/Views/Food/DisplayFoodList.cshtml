@model IEnumerable<RestaurantManagementSystem.Models.Food>

@{
    ViewBag.Title = "DisplayFoodList";
}

<h2 style=" margin-top: 80px">Food stock</h2>

<p>
    @Html.ActionLink("Insert New Food", "InsertFood", new { area = "" }, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoughtDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManufacturedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FoodType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BoughtDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpirationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManufacturedDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditFood", new { id=item.FoodId },new { @class = "btn btn-default" }) &nbsp;
            @Html.ActionLink("Details", "FoodDetails", new { id=item.FoodId },  new { @class = "btn btn-default" }) &nbsp;
            @Html.ActionLink("Delete", "DeleteFood", new { id=item.FoodId }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
